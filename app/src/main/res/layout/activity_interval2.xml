<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trainingSetsQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000"
                android:textSize="72sp" />

            <TextView
                android:id="@+id/trainingWorkQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="00 : 00"
                android:textColor="#000"
                android:textSize="66sp" />

            <TextView
                android:id="@+id/trainingRestQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="00 : 00"
                android:textColor="#000"
                android:textSize="66sp" />

            <TextView
                android:id="@+id/trainingMotivationalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="WORK IT"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="46sp" />

            <TextView
                android:id="@+id/trainingPausedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="PAUSE"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="46sp" />

            <Button
                android:id="@+id/pauseBtn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="pauseTimer"
                android:text="PAUSE"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="46sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="continueTimer"
                android:text="CONTINUE"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="46sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/endBtn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="HOLD TO END"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="46sp" />
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>